flexbox(dir = row, jc = flex-start, ai = flex-start, gap = 0)
  display flex
  flex-direction dir
  justify-content jc
  align-items ai
  gap gap

centerChild()
  display flex
  flex-direction row
  justify-content center
  align-items center

button()
  cursor pointer
  user-select none

opacityButton()
  cursor pointer
  user-select none
  transition opacity 0.2s
  -webkit-tap-highlight-color transparent
  @media (hover hover)
    &:hover
      transition opacity 0s
      opacity 0.9
  &:active
    transition opacity 0s
    opacity 0.6

iconSize(size)
  centerChild()
  width size
  height size
  font-size size
  flex-shrink 0