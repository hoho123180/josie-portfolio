@import '../../css/variables.styl'
@import '../../css/fonts.styl'
@import '../../css/mixins.styl'
@import '../../css/keyframes.styl'

.container
  flexbox(row, flex-start, flex-end, 24px)
  padding-block 48px
  @media ({mobile} )
    flex-direction column
    align-items center

.content
  flexbox(column, flex-start, center, 24px)
  @media ({mobile} )
    align-items center
  width 100%
  padding 36px 0
  text-align center
  .heroHeader
    flexbox(row, flex-start, flex-end, 12px)
  h1
    Display1(700)
    color Black
  .h2Group
    flexbox(row, center, center, 8px)
    H2(600)
  p
    H3()
    color grey1

.rotatingText
  background-color accent-light
  color accent1
  padding 4px 12px
  border-radius 8px
  overflow hidden
  justify-content center

.dialogWrapper
  position relative

.dialog
  outline 4px solid accent1
  outline-offset -4px
  padding 12px 24px
  border-radius 0px 32px 32px 32px
  color accent1
  H2(600)
  position absolute
  top 0
  left 0
  overflow hidden
  @media (max-width 400px)
    H3(600)
  &:not(.hide)
    padding 12px 24px
    transform-origin top left
    span
      white-space nowrap
      overflow hidden
  &.hide
    padding 12px 24px
    position relative
    opacity 0
    user-select none

.buttonGroup
  flexbox(row, flex-start, stretch, 16px)
  flex-wrap wrap
  @media (max-width 404px)
    flex-direction column
    justify-content center
    width 100%
  button
    width 100%

.heroImageContainer
  position relative
  width 100%
  max-width 520px
  max-height 400px
  aspect-ratio 1.3
  display none
  @media ({mobile} )
    display block

.box1, .box2, .box3, .box4
  position absolute
  animation fade-in 1s forwards
  opacity 0

.box1
  width 31.1%
  aspect-ratio 1.038
  top 4%
  left 8.5%
  animation-delay 0s

.box2
  width 28.6%
  aspect-ratio 1.38
  top 12.75%
  right 6.9%
  animation-delay 0.8s

.box3
  width 27.9%
  aspect-ratio 1.133
  right 0
  bottom 21.5%
  animation-delay 1.6s

.box4
  width 17.1%
  aspect-ratio 0.84
  left 4.6%
  bottom 13%
  animation-delay 2.4s

@keyframes zoomin
  0%
    transform scale(0)
  100%
    transform scale(1)

@keyframes typing
  0%
    width 0%
  100%
    width 100%
