@import '../../css/variables.styl'
@import '../../css/fonts.styl'
@import '../../css/mixins.styl'
@import '../../css/keyframes.styl'

.container
  flexbox(row, flex-start, flex-end, 24px)
  padding-block 48px
  @media ({mobile} )
    flex-direction column
    align-items center

.content
  flexbox(column, flex-start, stretch, 24px)
  @media ({mobile} )
    align-items center
  width 100%
  padding 36px 0
  @media ({mobile} )
    text-align center
  .heroHeader
    flexbox(row, flex-start, flex-end, 12px)
  h1
    Display1(700)
    color Black
  p
    H2()
    color grey1

.dialogWrapper
  position relative

.dialog
  outline 4px solid accent2
  outline-offset -4px
  padding 16px 24px
  border-radius 0px 32px 32px 32px
  color accent2
  H2(600)
  position absolute
  top 0
  left 0
  overflow hidden
  &:not(.hide)
    padding 16px 24px
    width 100%
    height 100%
    transform-origin top left
    span
      position absolute
      white-space nowrap
      overflow hidden
  &.hide
    padding 16px 24px
    padding 16px 24px
    position relative
    opacity 0
    user-select none

.buttonGroup
  flexbox(row, flex-start, center, 16px)

.heroImageContainer
  position relative
  width 100%
  max-width 520px
  max-height 400px
  aspect-ratio 1.3

.box1, .box2, .box3, .box4
  position absolute
  animation fade-in 1s forwards
  opacity 0

.box1
  width 31.1%
  aspect-ratio 1.038
  top 4%
  left 8.5%
  animation-delay 0s

.box2
  width 28.6%
  aspect-ratio 1.38
  top 12.75%
  right 6.9%
  animation-delay 0.8s

.box3
  width 27.9%
  aspect-ratio 1.133
  right 0
  bottom 21.5%
  animation-delay 1.6s

.box4
  width 17.1%
  aspect-ratio 0.84
  left 4.6%
  bottom 13%
  animation-delay 2.4s

@keyframes zoomin
  0%
    transform scale(0)
  100%
    transform scale(1)

@keyframes typing
  0%
    width 0%
  100%
    width 100%
