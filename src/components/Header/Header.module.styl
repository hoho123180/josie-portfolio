@import '../../css/variables.styl'
@import '../../css/fonts.styl'
@import '../../css/mixins.styl'

.header
  width 100%
  background-color #FFFFFF33
  backdrop-filter blur(40px)
  padding-inline 16px

.container
  width 100%
  max-width 1140px
  margin-inline auto
  padding-block 29px
  flexbox(row, space-between, center)

.name
  font-size 24px
  font-weight 700
  line-height 30.17px
  letter-spacing 10%
  padding 12px 12px 12px 0
  opacityButton()
  transition opacity 0.3s, color 0.3s
  @media (hover hover)
    &:hover
      transition opacity 0s, color 0s
      color accent1

.linkList
  flexbox(row, flex-start, center, 8px)
  @media ({mobile} )
    gap 4px