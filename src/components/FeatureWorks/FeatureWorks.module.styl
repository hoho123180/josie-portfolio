@import '../../css/variables.styl'
@import '../../css/fonts.styl'
@import '../../css/mixins.styl'

.container
  flexbox(column, flex-start, stretch, 36px)
  padding-block 80px
  @media ({mobile} )
    gap 60px

.workList
  width 100%
  display grid
  gap 36px
  @media ({mobile} )
    flex-direction row
    flex-wrap wrap

.worksHeader
  flexbox(column, flex-start, stretch, 4px)
  .title
    color accent1
    H2(600)
  .divider
    height 2px
    background-color accent1
  .description
    color accent2
    Body()

.featureWork
  flexbox(row, flex-start, center, 24px)
  padding-right 24px
  width 100%
  @media ({mobile} )
    flex-direction column
    padding-right 0
    max-width 400px
    a
      width 100%
  @media (hover hover)
    &:hover
      .imageContainer
        transition outline 0s
        outline 4px solid Black
      button
        background-color Black
        color White
        &::before
          border-color Black
      .buttonWrapper[data-color='accent'] button
        background-color accent1
        color White
        &::before
          border-color accent1

.imageContainer
  position relative
  width 100%
  max-width 553px
  max-height 416px
  outline 2px solid border
  border-radius 16px
  overflow hidden
  transition outline 0.3s
  aspect-ratio 1.33

.content
  flexbox(column, center, flex-start, 16px)
  max-width 539px
  width 100%
  h2
    H2(600)
  h6
    color warning1
    Caption(600)
  p
    overflow-wrap break-word
    Body()
    width 100%

.contentHeader
  flexbox(row, flex-start, center, 8px)

.tagList
  flexbox(row, flex-start, center, 4px)

.buttonWrapper[data-color='accent'] button
  color accent1
  &::before
    border-color accent1