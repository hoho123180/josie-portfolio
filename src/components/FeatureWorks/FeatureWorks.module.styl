@import '../../css/variables.styl'
@import '../../css/fonts.styl'
@import '../../css/mixins.styl'

innerBg(bgc, initialTranslate = -100%)
  content ''
  position absolute
  inset 0
  background-color bgc
  transform translateX(initialTranslate)
  transition transform 0.5s
  z-index -1

.container
  flexbox(column, flex-start, stretch, 36px)
  padding-block 80px
  @media ({mobile} )
    gap 60px

.workList
  width 100%
  flexbox(column, flex-start, center, 36px)
  @media ({mobile} )
    display grid
    grid-template-columns repeat(auto-fit, minmax(360px, 1fr))
    justify-items center
    justify-content center
    align-items start

.worksHeader
  flexbox(column, flex-start, stretch, 4px)
  .title
    color accent1
    H2(600)
  .divider
    height 2px
    background-color accent1
  .description
    color accent2
    Body()

.featureWork
  min-width 320px
  flexbox(row, flex-start, center, 24px)
  padding-right 24px
  width 100%
  @media ({mobile} )
    flex-direction column
    padding-right 0
    a
      width 100%
  @media (hover hover)
    &:hover
      .imageContainer
        transition outline 0s
        outline 4px solid Black
      .seal
        opacity 1
      .button
        color White
        &::before
          transform translateX(0%)

.imageContainer
  position relative
  width 100%
  max-width 553px
  max-height 416px
  outline 2px solid border
  border-radius 16px
  overflow hidden
  transition outline 0.3s
  aspect-ratio 1.33

.seal
  position absolute
  z-index 1
  background-color backgroundInversePrimary
  left 0
  right 0
  top 50%
  transform translateY(-50%)
  centerChild()
  color contentInversePrimary
  padding-block 12px
  H2(600)
  opacity 0
  transition opacity 0.5s

.content
  flexbox(column, center, flex-start, 16px)
  max-width 539px
  width 100%
  h2
    H2(600)
  h6
    color warning1
    Caption(600)
  p
    overflow-wrap break-word
    Body()
    width 100%

.contentHeader
  flexbox(row, flex-start, center, 8px)

.tagList
  flexbox(row, flex-start, center, 4px)

.button
  centerChild()
  padding 16px 20px
  outline 2px solid Black
  background-color transparent
  border-radius 8px
  overflow hidden
  position relative
  transition color 0.3s
  opacityButton()
  &[data-color='accent']
    outline-color accent1
    color accent1
    &::before
      innerBg(accent)
  &::before
    innerBg(Black)

.otherWorkList
  display grid
  grid-template-columns repeat(auto-fit, minmax(360px, 1fr))
  .featureWork
    flex-direction column