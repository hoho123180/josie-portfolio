@import '../../css/variables.styl'
@import '../../css/fonts.styl'
@import '../../css/mixins.styl'

outline()
  content ''
  position absolute
  border-radius 100px
  border-width 1px
  border-style solid
  border-color contentInversePrimary
  transition border-color 0.2s
  z-index 1
  inset 0

.container
  border-radius 100px
  centerChild()
  color contentInversePrimary
  position relative
  z-index 0
  &:not(.disabled)
    opacityButton()
  &[data-type='primary']
    background-color backgroundInversePrimary
    transition background-color 0.3s, color 0.3s
    &.disabled
      user-select none
      background-color backgroundInverseStateDisabled
      color contentInverseDisable
    @media (hover hover)
      &:not(.disabled):hover
        transition background-color 0s, color 0s
        background-color contentTertiary
  &[data-type='secondary']
    &::before
      outline()
    &.disabled
      user-select none
      color contentDisable
      &::before
        border-color contentInverseDisable
    @media (hover hover)
      &:not(.disabled):hover
        background-color backgroundPrimary
        color contentPrimary
  &[data-type='tertiary']
    &::before
      outline()
      border-color #00000000
    &.disabled
      user-select none
      color contentDisable
    @media (hover hover)
      &:not(.disabled):hover::before
        transition border-color 0s
        border-color contentInversePrimary
